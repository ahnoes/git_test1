<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="review">

	
	<insert id="insert" parameterType="dto.ReviewDto">
		insert into Review(Customer_name,Date_of_use,Restaurant_Name,
		Number_of_people,Customer_phoneNumber,Reserv_Fee,Reserv_Confirm,Owner_num)
		values(#{Customer_num},#{Date_of_use},#{Restaurant_Name},
		#{Number_of_people},#{Customer_phoneNumber},#{Reserv_Fee},#{Reserv_Confirm},#{Owner_num})
	</insert>
	
	<update id="update" parameterType="dto.ReviewDto">
		update Review set Date_of_use =
		 #{Date_of_use}, Number_of_people = #{Number_of_people}, 
		 Customer_phoneNumber = #{Customer_phoneNumber},
		 where customer_num = #{customer_num}
	</update>  
	
	<select id="one" parameterType="dto.ReviewDto" 
	resultType="dto.ReviewDto">
	select * from Review where customer_num = #{customer_num}
	</select>
	
	
	<delete id="del" parameterType="dto.ReviewDto">
	delete from Review where customer_num = #{customer_num}
	</delete>
	
	
</mapper>